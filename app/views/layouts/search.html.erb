<h2>You Searched Our Product Catalog For <%= @search_term %></h2>

<% if @games.length == 0  %>
<br />
<h2>No products were found to match your search</h2>
<% end %>


<table class="catalog">
  <% @games.each do |item| %>
      <tr>
        <td>
          <div class="image">
            <%= link_to (image_tag item.image_url, :style => "height:100px"), item %>
          </div>
          <div class="title">
            <%= link_to game.title, game %>
          </div>
          
          
        </div>
        </td>
      </tr>
    <% end %>
</table>
